        <div class="mb-3">
            <label asp-for="OgrenciId" class="form-label">Ogrenciler</label>
            <select asp-for="OgrenciId" asp-items="ViewBag.Ogrenciler" class="form-control">
                <option value="">Seçiniz</option>
            </select>
        </div>
                <div class="mb-3">
            <label asp-for="KursId" class="form-label">Kurslar</label>
            <select asp-for="KursId" asp-items="ViewBag.Kurslar" class="form-control">
                <option value="">Seçiniz</option>
            </select>
        </div>
        <div>
            <button class="btn btn-sm btn-primary" type="submit">Ekle</button>
        </div>
    </form>
</main>