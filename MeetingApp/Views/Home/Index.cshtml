@* @model string *@
@model MeetingInfo
@{
    ViewBag.Title = "Meeting App Title";
    Layout = "_LayoutHome";
}

<main class="text-center">
    <h1 class="h4">
        Meeting App Home Page!
        @* @Model *@
        @ViewBag.Selamlama @ViewBag.UserName @ViewData["Surname"]
    </h1>
    <div class="card my-2">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">@Model.Location 'da</li>
            <li class="list-group-item">@Model.Date.ToString("dd/MM/yyyy HH:mm:ss") tarihinde gerçekleşecek</li>
            <li class="list-group-item">@Model.NumberOfPeople kişi katılacak</li>
        </ul>
    </div>
    <p class="">Toplantı katılım durumunuzu bildiriniz!</p>
    <a asp-controller="Meeting" asp-action="Apply" class="btn btn-sm btn-primary text-white">
        Başvuru Yap
    </a>
</main>
