@model List<Meeting>
<main>
    <h1 class="h4">
        Toplantıya Katılım Listesi
    </h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Ad</td>
                <td>Email</td>
                <td>Phone</td>
                <td>Katılım Durumu</td>
                <td>Detay</td>
            </tr>
        </thead>
        <tbody>
            @{int i = 0;}
            @foreach (var meeting in Model)
            {
                var durum = meeting.WillAttend == true ? "Evet" : "Hayır";
                var className = meeting.WillAttend == true ? "table-success" : "table-danger";
                if(meeting.WillAttend){
                    i++;
                }
                <tr class="@className">
                    <td>@meeting.Name</td>
                    <td>@meeting.Email</td>
                    <td>@meeting.Phone</td>
                    <td>@durum</td>
                    <td>
                        <a href="/meeting/details/@meeting.Id" class="btn btn-primary btn-sm text-white">Detay</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</main>